{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "skipLibCheck": true
    // "moduleResolution": "node"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
